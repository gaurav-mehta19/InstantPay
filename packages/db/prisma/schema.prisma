generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())
  email String @unique
  password String?
  name String
  balance Balance[]
  onRampTransaction OnRampTransaction[]
}

model Balance{
  id String @id @default(cuid())
  userId String
  amount Int
  locked Int
  user User @relation(fields: [userId], references: [id])
}

model OnRampTransaction {
  id String @id @default(cuid())
  status OnRampStatus
  token String @unique
  provider String
  amount Int
  userId String
  user User @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}


enum OnRampStatus {
  Processing
  Success
  Failed
}